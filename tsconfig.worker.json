{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": ".worker-dist",
    "rootDir": ".",
    "esModuleInterop": true
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "betechops/**",
    "node_modules",
    ".next",
    ".worker-dist",
    "tests"
  ]
}

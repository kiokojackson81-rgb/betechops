{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": ".worker-dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "scripts/jumia-sync-worker.ts",
    "scripts/cleanup-jumia-orders.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "betechops/**",
    "node_modules",
    ".next",
    ".worker-dist",
    "tests"
  ]
}
